{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Worker": {
    "Interval": 1000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      //{ "Name": "Console" }, // 有需要再啟用，正式環境不會看到 Console 可不用
      {
        "Name": "File",
        "Args": {
          "path": "填寫路徑、前綴與副檔名", // 例如 log/log-.txt
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "Seq網址" } // 例如 http://localhost:5341/
      }
    ],
    // 額外屬性必須安裝對應 Enricher 才能輸出
    "Enrich": [
      "WithEnvironmentName",
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  }
}
